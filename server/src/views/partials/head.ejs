<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>
    Performance Matters
</title>
<style>
    body {
        font-family: 'Open Sans', sans-serif;
    }

    * {
        margin: 0;
        font-family: inherit;
        line-height: inherit;
        color: inherit;
        box-sizing: inherit;
    }

    *:before,
    *:after {
        box-sizing: inherit;
    }

    label,
    img,
    audio,
    video,
    canvas,
    meter,
    progress,
    svg,
    iframe {
        display: block;
    }

    button {
        font-size: inherit;
        cursor: pointer;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
    }

    ol, ul {
        padding: 0;
        list-style: none;
    }

    blockquote, q {
        quotes: none;
    }

    blockquote:before, blockquote:after,
    q:before, q:after {
        content: '';
        content: none;
    }

    html {
        box-sizing: border-box;
    }

    html, body {
        min-height: 100vh;
        padding: 0;
    }

    body {
        display: flex;
        line-height: 1;
        background-color: #FFFFFF;
        font-family: 'Raleway', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -ms-overflow-style: -ms-autohiding-scrollbar;
    }

    body main {
        display: flex;
        flex-direction: column;
        flex: 1 0;
        padding: 24px;
    }

    button {
        background-color: transparent;
    }

    .Link {
        display: block;
        font-size: inherit;
        color: #4F8CC4;
        transition: .2s color ease;
        cursor: pointer;
    }

    .Link:hover {
        text-decoration: underline;
        color: #5E8FC9;
    }

    .CharacterButton {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        height: 100%;
        padding: 24px;
        width: 100%;
        cursor: pointer;
        min-height: 80px;
    }

    .CharacterButton:hover,
    .CharacterButton:active {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .InfiniteScrollList {
        overflow: auto;
        height: 85vh;
        list-style: none;
        display: flex;
        margin-top: 12px;
        margin-left: -1%;
        margin-right: -1%;
        flex-direction: row;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .InfiniteScrollList li {
        width: 12%;
        padding: 1%;
        margin-bottom: 12px;
    }
</style>