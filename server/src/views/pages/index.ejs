<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
        <link rel="stylesheet" type="text/css" href="css/master.css">
    </head>
    <body>
        <main>
            <% include ../partials/masterPageHeader %>
            <section>
                <ul class="InfiniteScrollList">
                    <% characters.forEach(function(character) { %>
                        <li>
                            <a class="CharacterButton" href="<%= character.detailUrl %>">
                                <%= character.name %>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </section>
            <span class="ConnectionMarker">Offline</span>
        </main>
        <script src="scripts/index.js"></script>
        <script src="scripts/connection.js"></script>
    </body>
</html>